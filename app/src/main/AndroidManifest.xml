<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avelycure.photogallery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".albums.AlbumElementsActivity"></activity>
        <activity android:name=".more.MoreActivity" />
        <activity android:name=".ofiice.OfficeActivity" />
        <activity android:name=".albums.AlbumsActivity" />
        <activity android:name=".feedback.FeedbackActivity" />
        <activity android:name=".settings.SettingsActivity" />
        <activity
            android:name=".home.HomeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>